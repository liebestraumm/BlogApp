<%- include("partials/header") %>

<div class = "ui main text container">
	<div class = "ui huge header"><h1> Blog Manager </h1> </div>
	<div class = "ui top attached segment">
		<div class = "ui divided items">
			<% blogs.forEach(function(blogs){ %>
				<div class="item">
					<div class = "image">
						<img class="ui centered rounded image" src = <%= blogs.image %> >
					</div>
					<div class = "content" style= "margin-left: 20px;">
						<a class = "header" href="/blogs/<%= blogs._id %>" > <%= blogs.title %> </a>
						<div class = "meta">
							<span> <%= blogs.created %> </span>
						</div>
						<div class = "description">
							<p> <%= blogs.body.substring(0, 100) %>... </p>
						</div>
						<div class = "extra">
							<a class= "ui floated basic violet button" href="/blogs/<%= blogs._id %>" > Read More </a>
						</div>
					</div>
				</div>
			<% }); %>
		</div>
	</div>
</div>

<%- include("partials/footer") %>